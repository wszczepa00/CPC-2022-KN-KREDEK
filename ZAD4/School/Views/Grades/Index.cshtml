@model IEnumerable<Grade>
@{
    ViewData["Titled"] = "Lista Ocen";
}

<p>
    @Html.ActionLink("Dodaj ocene", "Create", "Grades")
</p>


<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model)
        {
            <tr>
                <td>
                    @{
                        var StudentName = grade.Student.Name + " " + grade.Student.LastName;
                        @Html.DisplayFor(name => StudentName);
                    }
                </td>
                <td>
                    @{
                        var CourseName = grade.Course.Name;
                        @Html.DisplayFor(name => CourseName);
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => grade.Mark)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", "Grades", routeValues: new { Id = grade.Id });
                </td>
                <td>
                    @Html.ActionLink("Usun", "Delete", "Grades", routeValues: new { Id = grade.Id });
                </td>

            </tr>
        }
    </tbody>
</table>